<div class="container">
  <div class="row">
    <h2>User info</h2>
    <%= form_for(@user) do |f| %>
    <div class="field">
    <label class="label">Name</label>
    <%= f.text_field :name %>
    </div>
    <div class="field">
    <label class="label">Image</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    </div>
    <div class="field">
    <label class="label">Introduction</label>
    <%= f.text_field :introduction %>
    </div>
    <div class="actions">
    <%= f.submit 'Update User', class: "btn" %>
    </div>
    <% end %>

  </div>
</div>